$light_tan: #D9CEB2;
$cardinal_red: rgb(215, 4, 18);
$brown: #320000;
$red: rgb(166, 70, 70);

body {
  background-color: #ccc;
}

p {
  line-height: 24px;
  font-size: 16px;
  margin-top: 12px;
  margin-bottom: 12px;
}

header {
  background-color: white;
  border: solid 3px;
  border-color: #888;
  padding-bottom: 1px;
  margin-bottom: 25px;
  box-shadow: 13px 13px 5px #888888;
  font-size: 20px;
}

#banner {
  background-image: url("<%= asset_path "top_banner-4.png"%>");
}

#logo {
  padding: 25 25 25 25px;
}

#navivation {
  display: inline-block;
}

header a {
}

header img {
  display: inline-block;
}

header ul {
}


#body_container {
  width: 1200px;
  margin-left: auto;
  margin-right: auto;
  /*background-color: white;*/
}

#home_container {
  background-color: white;
  border-radius: 15px;
  padding-top: 30px;
  padding-left: 30px;
  padding-right: 30px;
  padding-bottom: 30px;
  border: solid 3px;
  border-color: #888;
}

.slides_container {
  height: 400px;
}

.image {
  float: left;
}

.details {
  float: left;
}

#navigation {
  border-bottom: solid;
  margin-left: 100px;
  margin-right: 100px;
  margin-bottom: 15px;
  padding-top: 20px;
  padding-left: 90px;
  padding-right: 90px;
  padding-bottom: 10px;
  border-width: 2px;
}

#nav_menu {
  display: inline-block;
}

#logo {
  display: inline-block;
}

#navigation li {
  display: inline-block;
  margin-left: 10px;
  margin-right: 10px;
}

.selected_nav_link {
  color: rgb(70, 23, 0);
}

#main_container {
  background-color: white;
  box-shadow: 13px 13px 5px #888888;
  border: solid 3px;
  border-color: #888;
}


#tabs {
  float: left;
  border-right: solid;
  border-width: 5px;
  margin-right: 70px;
  height: 100%;
  background-color: $red;
  //background-color: $brown;
}

#tabs ul {
  list-style-type: none;
  margin-left: 0px;
}

#tabs li {
  padding-top: 1.5em;
  padding-bottom: 1.5em;
  padding-right: 30px;
  padding-left: 70px;
}

#tabs a {
  font-size: 18px;
  color: white;
}

.active_tab {
  background-color: $brown;
}

#tab_content_container {
  float: left;
  padding-bottom: 25px;
}

#tab_content_image a {
  background: url(/assets/bsa_button.png) repeat-x scroll 0 0 transparent;
  border-radius: 5px 5px 5px 5px;
  color: white;
  display: inline-block;
  font-family: 'MyriadProRegular',sans-serif;
  font-size: 30px;
  height: 52px;
  line-height: 52px;
  padding: 0;
  position: relative;
  text-align: center;
  width: 201px;
  text-decoration: none;
  margin-top: 15px;
}

#tab_content_container h1 {
  color: rgb(70, 23, 0);
  border-bottom: solid 2px;
  padding-bottom: 20px;
  padding-top: 25px;
  margin-bottom: 30px;
  text-align: center;
/*  background-color: #D9CEB2; */
}

/* ~54 characters a line */
#tab_content_text {
  width: 470px;
  float: left;
  margin-right: 50px;
}

#tab_content_text h2 {
  color: rgb(215, 4, 18);
  text-align: center;
 /* background-color: #D9CEB2; */
}


#tab_content_image {
  width: 200px;
  float: left;
  margin-left: 20px;
  margin-top: 100px;
  text-align: center;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 20px;
  width: 250px;
}

#tab_content_image img {
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 20px;
  padding-bottom: 20px;
  border: solid 3px;
  border-top-width: 40px;
  border-color: #D9CEB2;
}

#tab_content_image a {
  font-size: 26px;
}

#tab_navigation {
}

#tab_navigation li {
  display: inline-block;
  margin-left: 10px;
  margin-right: 10px;
}

.content_box {
  //border: solid 2px;
  //border-color: $light_tan;
  //margin-bottom: 30px;
  padding: 20 20 20 20px;
  //background-image: url("<%= asset_path "p-bg.jpg" %>");
  background-repeat: no-repeat;
  background-position: right;
}

.content_box h2 {
}

footer {
  margin-top: 20px;
  border-width: 2px;
  background-color: white;
  box-shadow: 13px 13px 5px #888888;
  border: solid 3px;
  border-color: #888;
  background-color: $brown;
}

footer p {
  display: inline-block;
  margin-left: 50px;
  color: white;
}

footer a {
  color: white;
}

#footer_logo {
  display: inline-block;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 100px;
}

