$light_tan: #D9CEB2;
$cardinal_red: rgb(215, 4, 18);
$brown: #320000;
$red: rgb(166, 70, 70);
$top_blue: rgb(197, 225, 250);
$bottom_blue: rgb(232, 245, 252);
$light_brown: rgb(75, 35, 27);

body {
  background-color: #ccc;
  //background-color: rgb(232, 245, 252);
