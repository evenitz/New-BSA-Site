}

#main_container {
  background-color: white;
  box-shadow: 13px 13px 5px #888888;
  border: solid 3px;
  border-color: #888;
}


#tabs {
  float: left;
  border-right: solid;
  border-width: 5px;
  margin-right: 70px;
  height: 100%;
  background-color: $red;
  //background-color: $brown;
}

#tabs ul {
  list-style-type: none;
  margin-left: 0px;
}

#tabs li {
  padding-top: 1.5em;
  padding-bottom: 1.5em;
  padding-right: 30px;
  padding-left: 70px;
}

#tabs a {
  font-size: 18px;
  color: white;
}

.active_tab {
  background-color: $brown;
}

#tab_content_container {
  float: left;
  padding-bottom: 25px;
}

#tab_content_image a {
  background: url(/assets/bsa_button.png) repeat-x scroll 0 0 transparent;
  border-radius: 5px 5px 5px 5px;
  color: white;
  display: inline-block;
  font-family: 'MyriadProRegular',sans-serif;
  font-size: 30px;
  height: 52px;
  line-height: 52px;
  padding: 0;
  position: relative;
  text-align: center;
  width: 201px;
  text-decoration: none;
  margin-top: 15px;
}

#tab_content_container h1 {
  color: rgb(70, 23, 0);
  border-bottom: solid 2px;
  padding-bottom: 20px;
  padding-top: 25px;
  margin-bottom: 30px;
  text-align: center;
/*  background-color: #D9CEB2; */
}

