  padding-bottom: 30px;
  border: solid 3px;
  border-color: #888;
  box-shadow: 13px 13px 5px #888888;
}

#slides {
  width: 1000px;
  margin-left: auto;
  margin-right: auto;
  border: solid 10px;
  border-color: $brown;
}

.slides_container div {
}

.slides_container {
  height: 290px;
  padding-left: 40px;
  padding-right: 40px;
  padding-top: 40px;
}

.pagination {
  width: 115px;
  margin-left: auto;
  margin-right: auto;
}

.image {
  float: left;
}

.details {
  float: left;
