$light_tan: #D9CEB2;
$cardinal_red: rgb(215, 4, 18);
$brown: #320000;
$red: rgb(166, 70, 70);
$top_blue: rgb(197, 225, 250);
$bottom_blue: rgb(232, 245, 252);
$light_brown: rgb(75, 35, 27);

body {
  background-color: #ccc;
  background-color: rgb(232, 245, 252);
  background: -webkit-gradient(linear, left top, left bottom, from($top_blue), to($bottom_blue));
  background: -moz-linear-gradient(top,  $top_blue,  $bottom_blue);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=$top_blue, endColorstr=$bottom_blue);
}

p {
  line-height: 24px;
  font-size: 16px;
  margin-top: 12px;
  margin-bottom: 12px;
}

h2 {
  color: $cardinal_red;
  text-align: center;
}

header {
  background-color: white;
  border: solid 3px;
  border-color: #888;
  //padding-bottom: 1px;
  margin-bottom: 25px;
  box-shadow: 13px 13px 5px #888888;
  font-size: 20px;
}

#banner {
  background-image: url("<%= asset_path "top_banner-4.png"%>");
}

#logo {
  padding: 25px;
}

#navivation {
  display: inline-block;
}

header a {
}

header img {
  display: inline-block;
}

header ul {
}


#body_container {
  width: 1200px;
  margin-left: auto;
  margin-right: auto;
  /*background-color: white;*/
}

#home_container {
  background-color: white;
  padding-top: 30px;
  padding-left: 30px;
