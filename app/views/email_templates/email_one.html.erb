        <tr>
          <td>
            <!-- Header -->
            <table border="0">
              <tr>
                <td colspan="5">
                  <%= image_tag "email_banner.png" %>
                </td>
              </tr>
              <tr>
                <td width="150" align="center">
                  <p> <a href="http://brownbsa.com/students" style="color: #777"> Student Services </a> </p>
                </td>
                <td width="150" align="center">
